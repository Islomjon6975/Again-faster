{{ 'style-announcement.css' | asset_url | stylesheet_tag}}
{{ 'script-announcement.js' | asset_url | script_tag}}

<div class="announcement">
        {% for announcement in section.blocks %}
            <div class="announcement__wrapper swiper-slide">
                <a class="announcement__link" href="#" class="announcement__text">{{ announcement.settings.title  }}</a>
            </div>
        {% endfor %}
</div>

{% schema %}
{
    "name": "Announcement",
    "max_blocks": 3,
    "blocks": [
        {
           "name":"Announcement",
           "type":"announcement",
           "settings": [
                {            
                    "type": "text",
                    "id": "title",
                    "label": "Announcement title",
                    "default": "20% OFF Sitewide until 9/12"
                }
            ]

        }
    ]
    
}
{% endschema %}
