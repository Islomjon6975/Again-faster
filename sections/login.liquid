<!-- /templates/customers/login.liquid -->
{{ 'style.login.css' | asset_url | stylesheet_tag }}



  <div class="login__container">
  {% form 'customer_login' %}
  {{ form.errors | default_errors }}
    <h3 class="h3 login__title">Log in</h3>
    <div class="login__wrapper">
      <div class="input-box">
        <label class="login__label" for="email">Email Address</label>
        <input class="login__input" type="email" value="" name="customer[email]"/>
      </div>
    </div>

    <div class="login__wrapper">
      <div class="input-box">
        <label class="login__label" for="password">Password</label>
        <input class="login__input" type="password" value="" name="customer[password]"/>
      </div>
    </div>

    <p class="login__forgot">Forgot password?</p>
    
    <button class="login__btn" type="submit">Log in</button>

  {% endform %}
    <p class="login__alreadyHaveAnAccount">Donâ€™t have an account yet?</p>
    <form action="/account/register">
      <button class="login__btn--secondary" type="submit">Create an account</button>
    </form>

  </div>

{% form 'recover_customer_password' %}

      {{ form.errors | default_errors }}
    <div class="recover__container">
      <h3 class="h3 login__title">Reset Password</h3>

      <label for="customer_email">Email Address</label>
      <input class="login__input" type="email" name="email"/>

      <input class="forgot__btn" type="submit" value="Submit"/>
    </div
{% endform %}

<script>
  const forgotPassword = document.querySelector('.login__forgot')
  const loginContainer = document.querySelector('.login__container')
  const forgotContainer = document.querySelector('.recover__container')
  forgotContainer.style.display = 'none'
  forgotPassword.addEventListener('click', () => {
      loginContainer.style.display = 'none'
      forgotContainer.style.display = 'flex'

  })
</script>