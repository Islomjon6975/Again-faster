{{ 'style-footer.css' | asset_url | stylesheet_tag }}

<style>
    .footer__container {
        background-image: url("{{ section.settings.footer_icon | img_url: '449X180' }}");
    }
</style>

<div class="footer">
    <div class="footer__container">
            <div class="footer__form footer__col1">
                <h4 class="footer__title">{{ section.settings.footer_title1 }}</h4>
                <div class="footer__input__wrapper">
                    <input type="text" class="footer__input" placeholder="Enter your email">
                    <span class="footer-arrow">
                        {% render 'icon-arrow-black' %}
                    </span>
                </div>
                <div class="footer__socials">
                    {% render 'icon-facebook' %}
                    {% render 'icon-instagram' %}
                    {% render 'icon-email' %}
                </div>
            </div>
                
            <div class="footer__col2">
                <h4 class="footer__title">{{ section.settings.footer_title2 }}</h4>
                <p class="footer__subtitle">About Us</p>
                <p class="footer__subtitle">Blog</p>
                <p class="footer__subtitle">Gift Cards</p>
                <p class="footer__subtitle">Military/LEO Discount</p>
                <p class="footer__subtitle">Financing</p>
                <p class="footer__subtitle">Retail Store</p>
            </div>
            <div class="footer__col3">
                <h4 class="footer__title">{{ section.settings.footer_title3 }}</h4>
                <p class="footer__subtitle">Introductions</p>
                <p class="footer__subtitle">Shipping</p>
                <p class="footer__subtitle">Returns and Warranty</p>
                <p class="footer__subtitle">Contact Us</p>
                <p class="footer__subtitle">Shop in Store</p>
            </div>
    </div>
    <p class="footer__copyright">Â©2020 Again Faster. All Rights Reserved</p>
</div>

{% schema %}
{
    "name": "Footer Image",
    "settings": [
        {
            "id": "footer_icon",
            "type": "image_picker",
            "label": "Footer Image"
        },
        {
            "id": "footer_title1",
            "type": "text",
            "label": "Footer Title 1",
            "default": "Newsletter"
        },
        {
            "id": "footer_title2",
            "type": "text",
            "label": "Footer Title 2",
            "default": "Again faster"
        },
        {
            "id": "footer_title3",
            "type": "text",
            "label": "Footer Title 3",
            "default": "Get Help"
        }

    ]
    
        
    
}
{% endschema %}