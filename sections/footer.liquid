{{ 'style-footer.css' | asset_url | stylesheet_tag }}

<style>
    .footer__container {
        background-image: url("{{ section.settings.footer_icon | img_url: '449X180' }}");
    }
</style>

<div class="footer">
    <div class="footer__container">
        <div class="footer__form footer__col1">
            <h4 class="footer__title"></h4>
            <div class="footer__input__wrapper">
                <input type="text" class="footer__input" placeholder="Enter your email">
                <img src="../assets/svg-arrow.svg" alt="">
            </div>
        </div>
        <div class="footer__col2"></div>
        <div class="footer__col3"></div>
    </div>
</div>

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "id": "footer_icon",
            "type": "image_picker",
            "label": "Footer Image"
        }
    ]
}
{% endschema %}